{
  "name": "@ebarooni/capacitor-calendar",
  "version": "6.2.0",
  "description": "The Capacitor Calendar Plugin enables full calendar functionality on iOS and Android, with added reminder support for iOS devices.",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "EbarooniCapacitorCalendar.podspec"
  ],
  "author": "Ehsan Barooni",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebarooni/capacitor-calendar.git"
  },
  "bugs": {
    "url": "https://github.com/ebarooni/capacitor-calendar.git/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "calendar",
    "reminders",
    "eventkit",
    "eventkitui",
    "angular",
    "ionic"
  ],
  "homepage": "https://capacitor-calendar.pages.dev",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "verify": "pnpm verify:ios && pnpm verify:android && pnpm verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "pnpm build",
    "ktlint": "ktlint 'android/src/main/java/**'",
    "lint:ts": "eslint . --ext .ts",
    "lint:html": "eslint . --ext .html",
    "lint:css": "stylelint \"**/*.(css|scss)\"",
    "lint:swift": "swiftly ios",
    "lint:kt": "pnpm ktlint",
    "lint": "pnpm lint:ts && pnpm lint:html && pnpm lint:css && pnpm lint:swift && pnpm lint:kt",
    "fmt:ts": "eslint . --ext .ts --fix",
    "fmt:html": "eslint . --ext .html --fix",
    "fmt:css": "stylelint \"**/*.(css|scss)\" --fix",
    "fmt:swift": "swiftly --fix ios",
    "fmt:md": "prettier --write \"**/*.md\"",
    "fmt:kt": "pnpm ktlint -F",
    "fmt": "pnpm fmt:ts && pnpm fmt:html && pnpm fmt:css && pnpm fmt:swift && pnpm fmt:md && pnpm fmt:kt",
    "docgen:api": "docgen --api CapacitorCalendarPlugin --output-readme documentation.md --output-json dist/docs.json",
    "docgen:readme": "docgen --api CapacitorCalendarPlugin --output-readme README.md",
    "clean": "rm -rf ./dist",
    "build": "pnpm clean && pnpm docgen:api && pnpm docgen:readme && tsc && rollup -c rollup.config.mjs",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^17.4.1",
    "@angular-eslint/eslint-plugin-template": "^17.4.1",
    "@angular-eslint/template-parser": "^17.4.1",
    "@angular/cli": "^17.3.7",
    "@aparajita/swiftly": "^1.0.4",
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/docgen": "^0.2.2",
    "@capacitor/ios": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "~3.2.5",
    "rollup": "^4.17.2",
    "stylelint": "^16.5.0",
    "stylelint-prettier": "^5.0.0",
    "swiftlint": "^1.0.2",
    "typescript": "~5.4.5"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.0"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
